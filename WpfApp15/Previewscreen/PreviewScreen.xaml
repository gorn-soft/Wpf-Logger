<Window x:Class="WpfApp15.Previewscreen.PreviewScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Topmost="True"
        AllowsTransparency="True"
        Height="402.585" Width="369.6" 
        ShowInTaskbar="False" 
        ResizeMode="NoResize" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" 
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="MainWindowStyle" TargetType="{x:Type Window}">

            <Setter Property="shell:WindowChrome.WindowChrome">
                <Setter.Value>
                    <shell:WindowChrome ResizeBorderThickness="0"  CaptionHeight="240" CornerRadius="0" GlassFrameThickness="0"/>
                </Setter.Value>
            </Setter>

        </Style>
    </Window.Resources>

    <Grid Background="Transparent">

        <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent">
            <Image Source="Logo.png"  />
            <TextBlock Margin="0,0,0,7" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Run FontSize="25" FontFamily="Matura MT Script Capitals" Foreground="AliceBlue">Maxs Gorn 2020</Run>
            </TextBlock>
        </Grid>

    </Grid>
</Window>
